<% if flash[:notice] %>
  <div id="notice" class="alert alert-warning mb-0" role="alert">
    <%= notice %>
  </div>
<% end %>

<div class="container-fluid h-100 bg-light">
  <div class="row h-75 align-items-center">
    <div class="col-md-4 offset-md-4 justify-content-center align-self-center">
      <div class="card h-100">
        <div class="card-header w-100">
          <h5>Events</h5> 
        </div>
        <div class="card-body mt-2"> 
            <ul class="list-group list-group-flush">
              <% @events.each do |event| %>
                <%= link_to event.title, event_path(event), class: "list-group-item list-group-item-action" %>
              <% end %>
            </ul>
        </div>
      </div>
    </div>
  </div>
</div>