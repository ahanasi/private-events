<% if flash[:notice] %>
  <div id="notice" class="alert alert-warning mb-0" role="alert">
    <%= notice %>
  </div>
<% end %>

<div class="container-fluid h-100 bg-light">
  <div class="row pt-5 align-items-center">
    <div class="col-md-6 offset-md-2 justify-content-center align-self-center">
      <div class="card h-100">
        <div class="card-header w-100">
          <div class="row">
            <div class="col-md-10">
              <h5>Event Details</h5>
            </div>
            
            <% if logged_in? %>
              <div class="col-md-2">
                <% if @event.attendees.include?(current_user) || @event.creator == current_user %>
                <% else %>
                  <%= button_to "Attend", attend_event_path, method: :get, class: "btn btn-sm btn-info float-right" %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="card-body mt-2"> 
          <p class="card-text">
            <strong>Created By:</strong>
            <%= @event.creator.username %>
          </p>
          <%= link_to "Back", events_path, class: "card-link" %>
        </div>
      </div>
    </div>
    <div class="col-md-2 justify-content-center align-self-center">
      <div class="card h-100">
        <div class="card-header w-100">
          <div class="row">
            <div class="col-md-10">
              <h5>Attendees</h5>
            </div>
            <div class="col-md-2 float-right">
              <% #  add number widget here %>
            </div>
          </div>
        </div>
        <div class="card-body mt-2"> 
          <p class="card-text">
          <ul class="list-group">
            <li class="list-group-item"><%= @event.creator.username %></li>
            <% @event.attendees.uniq.each do |attendee| %>
            <li class="list-group-item"><%= attendee.username %></li>
          </ul>
          <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
