<div class="container-fluid h-100 bg-light">
  <div class="row h-75 align-items-center">
    <div class="col-md-4 offset-md-2 justify-content-center align-self-center">
      <div class="card h-100">
        <div class="card-header w-100">
          <h5>Events you are Hosting</h5> 
        </div>
        <div class="card-body mt-2"> 
          <% if @user.created_events.exists? %>
            <ul class="list-group list-group-flush">
              <% @user.created_events.each do |event| %>
              <%= link_to event.title, event_path(event), class: "list-group-item list-group-item-action" %>
              <% end %>
            </ul>
          <% else %>
            <p>You have not created any events yet!</p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-4 justify-content-center align-self-center">
      <div class="card h-100">
        <div class="card-header w-100">
          <h5>Events you are Attending</h5> 
        </div>
        <div class="card-body mt-2"> 
          <% if @user.attended_events.exists? %>
            <ul class="list-group list-group-flush">
              <% @user.attended_events.each do |event| %>
              <%= link_to event.title, event_path(event), class: "list-group-item list-group-item-action" %>
              <% end %>
            </ul>
          <% else %>
            <p>You are not attending any events yet!</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
