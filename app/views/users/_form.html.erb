<%= simple_form_for @user, url: new_user_path, wrapper: :input_group do |f| %>

  <%- if f.error_notification %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <%= f.error_notification %>
    </div>
  <%- end %>

  <div class="form-inputs">
    <%= f.input :username, prepend: "@", placeholder: 'Username', label: false %>
  </div>

  <%= f.button :submit, class: "btn-primary mr-2" %>
  <%= link_to "Cancel", root_path, class: "btn btn-outline-secondary" %>
<% end %>