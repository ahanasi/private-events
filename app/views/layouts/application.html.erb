<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", 'data-turbolinks-track': "reload" %>
    <%= javascript_include_tag "application", 'data-turbolinks-track': "reload" %>
  </head>

  <body>
    
    <% if flash[:notice] %>
      <div id="notice" class="alert alert-warning mb-0" role="alert">
        <%= notice %>
      </div>
    <% end %>
    
    <% if flash[:alert] %>
    <div id="alert" class="alert alert-danger mb-0" role="alert">
      <%= alert %>
    </div>
    <% end %>
    <%= yield %>
  </body>
</html>
