<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", 'data-turbolinks-track': "reload" %>
    <%= javascript_include_tag "application", 'data-turbolinks-track': "reload" %>
  </head>

  <body>
    
    <% if flash[:notice] %>
      <p id=”notice”><%= notice %></p>
    <% end %>
    
    <% if flash[:alert] %>
      <p id="alert"><%= alert %></p>
    <% end %>
    
    
    <%= yield %>
  </body>
</html>
